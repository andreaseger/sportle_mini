= form_for @schedule do |f|
  -if @schedule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@schedule.errors.count, "error")} prohibited this schedule from being saved:"
      %ul
        - @schedule.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :long_course, "Course"
    = f.radio_button :long_course, true
    50m
    = f.radio_button :long_course, false
    25m
    =# f.check_box :long_course
  .field
    = f.label :date
    = f.text_field :date
  .actions
    = f.submit 'Save'
