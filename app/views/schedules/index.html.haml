%h1 Listing schedules

%table
  %tr
    %th Content
    %th Course
    %th Date
    %th Created at
    %th
    %th
    %th

  - @schedules.each do |schedule|
    %tr
      %td= word_wrap(schedule.content, :line_length => 25)
      %td= schedule.long_course ? "50m" : "25m"
      %td= Date.parse(schedule.date).strftime '%B %e %Y'
      %td= time_ago_in_words(Time.parse(schedule.created_at))
      %td= link_to 'Show', schedule
      %td= link_to 'Edit', edit_schedule_path(schedule)
      %td= link_to 'Destroy', schedule, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Schedule', new_schedule_path
